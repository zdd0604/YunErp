<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_50"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/module_login_myPhone_tv"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/register_myPhone_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:background="@drawable/module_border_editext"
            android:hint="@string/module_register_myPhone_tips"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/size_10"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/module_register_CAPTCHA_tv"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/register_captcha_et"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_35"
            android:layout_weight="1"
            android:background="@drawable/module_border_editext"
            android:hint="@string/module_register_CAPTCHA_tips"
            android:paddingLeft="@dimen/size_10"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/register_captcha_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:background="@drawable/module_login_btn_bg"
            android:gravity="center"
            android:text="@string/module_register_gainCAPTCHA_tv"
            android:textColor="@color/white" />
    </LinearLayout>


    <Button
        android:id="@+id/register_nextStep_btn"
        style="@style/Module_Btn_BuleStyle"
        android:layout_marginLeft="@dimen/size_0"
        android:layout_marginRight="@dimen/size_0"
        android:text="@string/module_register_nextStep_btn" />

</LinearLayout>
