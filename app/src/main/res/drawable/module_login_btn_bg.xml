<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>

            <gradient
                android:angle="0"
                android:endColor="#157fc6"
                android:startColor="#157fc6" />

            <corners android:radius="2dp" />

        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:state_pressed="false">

        <shape>

            <gradient
                android:angle="0"
                android:endColor="#38ADFE"
                android:startColor="#38ADFE" />

            <corners android:radius="2dp" />

        </shape>
    </item>

    <item
        android:state_enabled="false">
        <shape>

            <gradient
                android:angle="0"
                android:endColor="#99C2EA"
                android:startColor="#99C2EA" />

            <corners android:radius="2dp" />

        </shape>
    </item>

</selector>